<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="onClickConfirmationWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_end"
    tools:context=".activity.ConfirmationActivity">

    <TextView
        android:id="@+id/tvCurrentTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_75"
        android:fontFamily="@font/teko_medium"
        android:gravity="center"
        android:textSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrentTeamEmoji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="250sp" />

    <TextView
        android:id="@+id/tvCurrentPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90226333"
        android:fontFamily="@font/source_serif_pro_light"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>